<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gy.lease.web.admin.mapper.AttrKeyMapper">
    
    <resultMap id="BaseResultMap" type="com.gy.lease.web.admin.vo.attr.AttrKeyVo">
        <id property="id" column="id"/>
        <result property="name" column="key_name"/>
        <collection property="attrValueList" ofType="com.gy.lease.model.entity.AttrValue">
            <id property="id" column="value_id"/>
            <result property="name" column="value_name"/>
            <result property="attrKeyId" column="attr_key_id"/>
        </collection>
    </resultMap>

    <select id="attrKeyVos" resultMap="BaseResultMap">
        select k.id, k.name key_name, v.id value_id, v.name value_name, v.attr_key_id

        from attr_key k
                 left join attr_value v on k.id = v.attr_key_id and v.is_deleted = 0
        where k.is_deleted = 0
    </select>
</mapper>
